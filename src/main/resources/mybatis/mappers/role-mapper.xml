<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.situ.layoa.role.dao.RoleDao">
	<sql id="select_role_find">
		SELECT
		ROW_ID,ROLE_CODE,ROLE_NAME,ROLE_KIND,ROLE_INFO,ACTIVE_FLAG,CREATE_BY,CREATE_DATE,UPDATE_BY,UPDATE_DATE
		FROM L_ROLE WHERE ACTIVE_FLAG = 1
	</sql>
	<insert id="save" parameterType="Role" useGeneratedKeys="true"
		keyColumn="ROW_ID" keyProperty="rowId">
		INSERT INTO
		L_ROLE(ROW_ID,ROLE_CODE,ROLE_NAME,ROLE_KIND,ROLE_INFO,ACTIVE_FLAG,CREATE_BY,CREATE_DATE)
		VALUES(#{rowId},#{roleCode}#{roleName},#{roleKind},#{roleInfo},#{activeFlag},#{createBy},#{createDate})
	</insert>
	<delete id="delete">
		DELETE FROM L_ROLE WHERE ROW_ID = #{rowId}
	</delete>
	<update id="update">
		UPDATE L_ROLE
		<set>
			<if test="roleCode!=null">
				ROLE_CODE=#{roleCode},
			</if>
			<if test="roleName!=null">
				ROLE_NAME=#{roleName},
			</if>
			<if test="roleKind!=null">
				ROLE_KIND=#{roleKind},
			</if>
			<if test="roleInfo!=null">
				ROLE_INFO=#{roleInfo},
			</if>
			<if test="updateBy!=null">
				UPDATE_BY=#{updateBy},
			</if>
			<if test="updateDate!=null">
				UPDATE_DATE=#{updateDate},
			</if>
		</set>
		WHERE ROW_ID = #{rowId}
	</update>
	<select id="checkRoleName" resultType="Role">
		<include refid="select_role_find"></include>
		AND ROLE_NAME = #{roleName}
	</select>
	<select id="find" resultType="Role">
		<include refid="select_role_find"></include>
	</select>
	<select id="get" resultType="Role">
		<include refid="select_role_find"></include>
		AND ROW_ID = #{rowId}
	</select>
	<select id="getCount" resultType="java.lang.Integer">
		SELECT COUNT(ROW_ID)FROM L_ROLE
		WHERE ACTIVE_FLAG =1
	</select>
</mapper>  